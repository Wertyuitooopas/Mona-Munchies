    <script>
        // Show disclaimer modal on load
        document.addEventListener('DOMContentLoaded', function() {
            const disclaimerModal = document.getElementById('disclaimerModal');
            const acceptBtn = document.getElementById('acceptBtn');
            const mainContent = document.getElementById('mainContent');
            const confettiBtn = document.getElementById('confettiBtn');
            
            // Show modal
            disclaimerModal.classList.remove('hidden');
            
            // When accept button is clicked
            acceptBtn.addEventListener('click', function() {
                disclaimerModal.classList.add('hidden');
                mainContent.classList.remove('hidden');
                
                // Play fun sound (in a real site, you'd need proper audio files)
                console.log("BONK! (Imagine a funny sound effect playing)");
            });
            
            // Confetti button functionality
            if (confettiBtn) {
                confettiBtn.addEventListener('click', function() {
                    createConfetti();
                });
            }
            
            // Add some silly animations to buttons
            const buttons = document.querySelectorAll('button');
            buttons.forEach(button => {
                button.addEventListener('click', function() {
                    this.classList.add('animate-ping');
                    setTimeout(() => {
                        this.classList.remove('animate-ping');
                    }, 300);
                });
            });
            
            // Countdown timer
            function updateCountdown() {
                // Set the date we're counting down to (24 hours from now)
                const countDownDate = new Date();
                countDownDate.setDate(countDownDate.getDate() + 1);
                
                const now = new Date().getTime();
                const distance = countDownDate - now;
                
                const days = Math.floor(distance / (1000 * 60 * 60 * 24));
                const hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
                const minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
                const seconds = Math.floor((distance % (1000 * 60)) / 1000);
                
                if (document.getElementById('days')) {
                    document.getElementById('days').innerHTML = days.toString().padStart(2, '0');
                    document.getElementById('hours').innerHTML = hours.toString().padStart(2, '0');
                    document.getElementById('minutes').innerHTML = minutes.toString().padStart(2, '0');
                    document.getElementById('seconds').innerHTML = seconds.toString().padStart(2, '0');
                }
            }
            
            // Update the countdown every 1 second
            setInterval(updateCountdown, 1000);
            updateCountdown(); // Initial call
            
            // Create confetti effect
            function createConfetti() {
                const colors = ['#ff0000', '#00ff00', '#0000ff', '#ffff00', '#ff00ff', '#00ffff'];
                
                for (let i = 0; i < 100; i++) {
                    const confetti = document.createElement('div');
                    confetti.className = 'confetti';
                    confetti.style.left = Math.random() * 100 + 'vw';
                    confetti.style.backgroundColor = colors[Math.floor(Math.random() * colors.length)];
                    confetti.style.width = Math.random() * 10 + 5 + 'px';
                    confetti.style.height = Math.random() * 10 + 5 + 'px';
                    confetti.style.animation = 'confetti-fall ' + (Math.random() * 3 + 2) + 's linear forwards';
                    confetti.style.animationDelay = Math.random() * 2 + 's';
                    
                    document.body.appendChild(confetti);
                    
                    // Remove confetti after animation completes
                    setTimeout(() => {
                        confetti.remove();
                    }, 5000);
                }
            }
        });
                // Initialize Louvre map
        function initMap() {
            const map = L.map('louvre-map').setView([48.8606, 2.3376], 17);
            
            L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
                attribution: '&copy; <a href="https://www.openstreetmap.org/copyright">OpenStreetMap</a> contributors'
            }).addTo(map);
            
            // Add funny markers
            const bananaIcon = L.divIcon({className: 'map-marker', html: 'üçå'});
            const spaghettiIcon = L.divIcon({className: 'map-marker', html: 'üçù'});
            const cheeseIcon = L.divIcon({className: 'map-marker', html: 'üßÄ'});
            const monaIcon = L.divIcon({className: 'map-marker', html: 'üñºÔ∏è'});
            
            L.marker([48.861, 2.335], {icon: bananaIcon}).addTo(map)
                .bindPopup("Banana distraction zone");
                
            L.marker([48.8602, 2.338], {icon: spaghettiIcon}).addTo(map)
                .bindPopup("Spaghetti rappel entry point");
                
            L.marker([48.8608, 2.336], {icon: cheeseIcon}).addTo(map)
                .bindPopup("Emergency cheese stash");
                
            L.marker([48.8606, 2.3376], {icon: monaIcon}).addTo(map)
                .bindPopup("Mona Lisa snacking zone");
        }
        
        // Call map initialization after page loads
        document.addEventListener('DOMContentLoaded', initMap);
        
        // Sound effects
        const sounds = {
            click: new Howl({src: ['https://assets.mixkit.co/sfx/preview/mixkit-select-click-1109.mp3']}),
            hover: new Howl({src: ['https://assets.mixkit.co/sfx/preview/mixkit-hover-click-notification-235.mp3']}),
            success: new Howl({src: ['https://assets.mixkit.co/sfx/preview/mixkit-achievement-bell-600.mp3']})
        };
        
        // Add sound to buttons
        document.querySelectorAll('button').forEach(btn => {
            btn.addEventListener('mouseenter', () => sounds.hover.play());
            btn.addEventListener('click', () => sounds.click.play());
        });
        
        // Loading screen
        const loadingScreen = document.createElement('div');
        loadingScreen.className = 'loading-screen';
        loadingScreen.innerHTML = `
            <div class="loading-spinner"></div>
            <p class="mt-4 text-xl font-bold">Preparing heist tools...</p>
        `;
        document.body.appendChild(loadingScreen);
        
        setTimeout(() => {
            loadingScreen.style.opacity = '0';
            setTimeout(() => loadingScreen.remove(), 500);
            sounds.success.play();
        }, 2000);
    </script>
